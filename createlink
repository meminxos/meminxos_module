from .. import loader, utils


@loader.tds
class CreateGoogleLink(loader.Module):
    """
    Ð¼Ð¾Ð´ÑƒÐ»ÑŒ Ð´Ð»Ñ ÑÐ¾Ð·Ð´Ð°Ð½Ð¸Ñ Ð³ÑƒÐ³Ð» ÑÑÑ‹Ð»Ð¾Ðº
    """
    strings = {"name": "createlink"}

    async def ccmd(self, message):
        """"Ð¸ÑÐ¿Ð¾Ð»ÑŒÐ·ÑƒÐ¹ .c {Ð·Ð°Ð¿Ñ€Ð¾Ñ}, Ñ‡Ñ‚Ð¾Ð±Ñ‹ ÑÐ¾Ð·Ð´Ð°Ñ‚ÑŒ ÑÑÑ‹Ð»ÐºÑƒ"""
        site = "https://google.com/search?q="
        query = utils.get_args_raw(message)
        Htmlquery = query.split()
        for word in Htmlquery:
            site += f"{word}+"
        await self.inline.form(message=message, text=f"ðŸ”ŽÐ²Ð¾Ñ‚ Ñ‡Ñ‚Ð¾ Ð½Ð°ÑˆÐ»Ð¾ÑÑŒ Ð¿Ð¾ Ð·Ð°Ð¿Ñ€Ð¾ÑÑƒ: {query}:",

from .. import loader, utils

@loader.tds
class coloraccount(loader.Module):
    """
    –ú–æ–¥—É–ª—å –¥–ª—è —Ç–æ–≥–æ, —á—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å —Ü–≤–µ—Ç –∞–∫–∫–∞—É–Ω—Ç–∞.
    .cn {id/username/reply/none}
    .cnc - —É–∑–Ω–∞—Ç—å —Ü–≤–µ—Ç —á–∞—Ç–∞ –±–µ–∑ –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤.
    """
    strings = {"name": "coloraccount"}

    async def cncmd(self, message):
        args_raw = utils.get_args_raw(message)
        
        try:
            args = int(args_raw)
        except ValueError:
            await message.edit("–û—à–∏–±–∫–∞: –í–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–µ —á–∏—Å–ª–æ!")
            return
        def seven():
            colors = ["‚ù§Ô∏èred/–∫—Ä–∞—Å–Ω—ã–π", "üß°orange/–æ—Ä–∞–Ω–∂–µ–≤—ã–π", "üíúviolet/—Ñ–∏–æ–ª–µ—Ç–æ–≤—ã–π",
                      "üíögreen/–∑–µ–ª–µ–Ω—ã–π", "ü©µcyan/–≥–æ–ª—É–±–æ–π", "üíôblue/—Å–∏–Ω–∏–π", "ü©∑pink/—Ä–æ–∑–æ–≤—ã–π"]
            
            color_name = colors[args % 7] 
            return color_name     
        if args_raw.startswith("-100"):
            args = int(args_raw[:3])
        color_result = seven()
        await message.edit(f"Color your name: {color_result}")
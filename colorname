from .. import loader, utils

@loader.tds
class colorname(loader.Module):
    """"

    """
    strings = {"name": "colorname"}

    async def cncmd(self, message):
        args = utils.get_args_raw(message)
        reply = await message.get_reply_message()
        if args != None:
            args = int(utils.get_args_raw(message))
            if args %7== 0:
                args  = "❤️red/красный"
            elif args %7 == 1:
                args = "🧡orange/оранжевый"
            elif args %7 == 2 :
                args = "💜violet/фиолетовый"
            elif args %7 == 3:
                args = "💚green/зеленый"
            elif args %7 == 4:
                args = "🩵cyan/голубой"
            elif args %7 == 5:
                args = "💙blue/синий"
            elif args %7 == 6:
                args = "🩷pink/розовый"
            return await message.client.edit_message(message.chat_id,f"color your name: {args}" )
